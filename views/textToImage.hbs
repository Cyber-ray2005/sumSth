<div class="container">
    <div class="box form-container">
        <form id="summarizerForm" method="POST" action="/textToImage">
            <textarea 
                name="queryText" 
                id="queryText" 
                placeholder="Enter a short sentence to generate an image (Min length is 30 chars, Max length is 100,000 chars.)" 
                maxlength="100000"
            >{{formText}}</textarea>
            
           <button id="submitButton" type="submit">
                Generate Image
                <span id="spinner" style="display: none;">ğŸ”„</span>
            </button>
            <div id="spinner" style="display:none;">Loading...</div>
        </form>
    </div>

    <div class="box output-container" id="outputBox">
        {{#if generatedImage}}
        <img src="{{generatedImage}}" alt="" style="width: 100%; height: 100%;">
        {{/if}}
    </div>
</div>